extends chiefIndexLayout

block options
    div.row
        div.col-md-6.body-main
            img(id="logo" alt="iKitchen Logo Image Preview" src="/images/logo.png")           
        div.col-md-6.body-main
            form(id="form-receive-order" action="/chiefViewList" method="POST")
                fieldset
                    legend 待完成菜品
                    
                    div.form-group
                        select(multiple class="form-control" id="waiting-list" size="20")
                            each val in order
                                option(value="#{val.id}") #{val.name}

                    button(type="submit" class="btn btn-default") 接单
