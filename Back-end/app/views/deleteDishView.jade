extends managerIndexLayout

block options
    div.row
        div.col-md-6.body-main
            img(id="logo" alt="iKitchen Logo Image Preview" src="/images/logo.png")           
        div.col-md-6.body-main
            form(id="form-delete-dish" action="/deleteDish" method="post")
                fieldset
                    legend 已有菜品列表
                    
                    div.form-group
                        select(multiple class="form-control" id="all-dish-list" size="20")
                            each dish in dishes
                                option #{dish.name}

                    button(type="submit" class="btn btn-default") 删除菜品
